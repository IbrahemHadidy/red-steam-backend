    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "string-width": "^7.2.0",
    "strip-ansi": "^7.1.0",
    "swagger-themes": "^1.4.3",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.26",
